{
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "overrides": [
      {
        "files": ["*.ts", "*.test.ts"],
        "parserOptions": {
          "project": ["./tsconfig.json"]
        }
      }
    ],
    "rules": {
      "@typescript-eslint/strict-boolean-expressions": 2
    },
    "ignorePatterns": ["src/frontend/generated/*"]
  }
