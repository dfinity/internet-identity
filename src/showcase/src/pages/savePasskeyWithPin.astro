---
import Screen from "../layouts/Screen.astro";
---

<Screen title="Save Passkey With Pin" pageName="savePasskeyWithPin">
  <script>
    import { toast } from "$src/components/toast";
    import { i18n } from "../i18n";
    import { savePasskeyPage } from "$src/flows/register/passkey";

    savePasskeyPage({
      i18n,
      cancel: () => toast.info("cancel"),
      constructPasskey: () =>
        new Promise((_) => {
          toast.info("Passkey Construction");
        }),
      constructPin: () =>
        new Promise((_) => {
          toast.info("Pin Identity Construction");
        }),
    });
  </script>
</Screen>
