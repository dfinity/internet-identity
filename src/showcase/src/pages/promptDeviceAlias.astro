---
import Screen from "../layouts/Screen.astro";
---

<Screen title="Prompt Device Alias" pageName="promptDeviceAlias">
  <script>
    import { toast } from "$src/components/toast";
    import { i18n } from "../i18n";
    import { promptDeviceAliasPage } from "$src/components/alias";

    promptDeviceAliasPage({
      title: "Register this device",
      cancel: () => toast.info("canceled"),
      continue: (alias) => toast.info(`device alias: ${alias}`),
      i18n,
    });
  </script>
</Screen>
