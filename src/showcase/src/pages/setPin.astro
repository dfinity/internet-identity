---
import Screen from "../layouts/Screen.astro";
---

<Screen title="Set Pin" pageName="setPin">
  <script>
    import { toast } from "$src/components/toast";
    import { i18n } from "../i18n";
    import { setPinPage } from "$src/flows/pin/setPin";

    setPinPage({
      i18n,
      onContinue: (pin) => toast.info(`PIN: ${pin}`),
      cancel: () => toast.info("cancel"),
    });
  </script>
</Screen>
